@using Domain.Model;
@using Payroll_Mvc.Helpers;

@model Overtimerate

<form id="@ViewBag.form_id" class="save_form ui-widget-content ui-widget ui-corner-all" action=".">
    <table>
        <tr>
            <td valign="top" class="lbl">
                <label for="duration" class="label">Duration</label>
            </td>
            <td>
                <input id="id_duration" name="duration" type="text" class="text" placeholder="enter duration" title="enter duration" x-webkit-speech="x-webkit-speech" value="@CommonHelper.FormatNumberDouble(Model.Duration)" />
            </td>
        </tr>
        <tr>
            <td valign="top" class="lbl">
                <label for="year" class="label">Year</label>
            </td>
            <td>
                @{
                    List<SelectListItem> ly = new List<SelectListItem>();
                    for (int i = DateTime.Now.Year; i >= CommonHelper.END_YEAR; i--)
                    {
                        ly.Add(new SelectListItem { Selected = Model.Year == i, Text = i.ToString(), Value = i.ToString() });
                    }
                }
                @Html.DropDownList("year", ly, new { id = "id_year", @class = "select" })
            </td>
        </tr>
        <tr>
            <td valign="top" class="lbl">
                <label for="pay_rate" class="label">Pay rate</label>
            </td>
            <td>
                <input id="id_pay_rate" name="pay_rate" type="text" class="text" placeholder="enter overtime pay rate" title="enter overtime pay rate" x-webkit-speech="x-webkit-speech" value="@CommonHelper.FormatNumberDouble(Model.Payrate)" />
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <div class="row_button">
                    @{ Html.RenderPartial("_save_button"); }
                    @{ Html.RenderPartial("_cancel_button"); }
                </div>
            </td>
        </tr>
    </table>
</form>
