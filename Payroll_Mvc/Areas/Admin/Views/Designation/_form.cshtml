@using Domain.Model;

@model Designation

<form id="@ViewBag.form_id" class="save_form ui-widget-content ui-widget ui-corner-all" action=".">
    <table>
        <tr>
            <td valign="top" class="lbl">
                <label for="title" class="label">Job Title</label>
            </td>
            <td>
                <input id="id_title" name="title" type="text" class="text" placeholder="enter job title" title="enter job title" x-webkit-speech="x-webkit-speech" value="@Model.Title" />
            </td>
        </tr>
        <tr>
            <td valign="top" class="lbl">
                <label for="desc" class="label">Job Description</label>
            </td>
            <td>
                <textarea id="id_desc" name="desc" class="textarea" placeholder="enter job description" title="enter job description">@Model.Description</textarea>
            </td>
        </tr>
        <tr>
            <td valign="top" class="lbl">
                <label for="note" class="label">Note</label>
            </td>
            <td>
                <textarea id="id_note" name="note" class="textarea" placeholder="enter note" title="enter note">@Model.Note</textarea>
            </td>
        </tr>
        <tr>
            <td></td>
            <td>
                <div class="row_button">
                    @{ Html.RenderPartial("_save_button"); }
                    @{ Html.RenderPartial("_cancel_button"); }
                </div>
            </td>
        </tr>
    </table>
</form>
